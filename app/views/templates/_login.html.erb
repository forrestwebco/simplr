<% unless current_user %>
  <%= form_tag sessions_path, class: "ui form login_form_sm" do %>
    <%= hidden_field_tag :on_point, true %>
    <div class="field">
      <label>Username</label>
      <%= text_field_tag :login, nil, placeholder: "Username", class: :dark_text_field, id: :login_field_1 %>
    </div>

    <div class="field">
      <label>Passphrase</label>
      <%= password_field_tag :password, nil, placeholder: "Passphrase", class: :dark_text_field, id: :login_field_2 %>
    </div>

    <div class="field">
      <div class="ui checkbox">
    	  <%= check_box_tag :remember_me, 1, params[:remember_me], class: :hidden %>
        <label>Remember me</label>
      </div>
    </div>

    <button class="ui button" type="submit">Log in</button>

  <% end %>
<% else %>
  <%= link_to on_point_path do %>
    <div class="ui message">
      <div class="header">
        You've already logged in.
      </div>
      <p>Click here to return home.</p>
    </div>
  <% end %>
<% end %>
