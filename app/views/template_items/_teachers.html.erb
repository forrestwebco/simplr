<div class="ui cards stackable centered">
  <% 4.times do |i| %>
    <div class="card">
      <div class="image">
        <%= item_img_with_link "about_teacher_#{i}", _class: "", without_link: true %>
      </div>
      <div class="content">
        <div class="header"><%= item_with_link "about_teacher_{i}", without_link: true %></div>
        <div class="meta">
          <a>Coworker</a>
        </div>
        <div class="description">
          Elyse is a copywriter working in New York.
        </div>
      </div>
      <div class="extra content">
        <span class="right floated">
          Joined in 2014
        </span>
        <span>
          <i class="user icon"></i>
          151 Friends
        </span>
      </div>
    </div>
  <% end %>
</div>
