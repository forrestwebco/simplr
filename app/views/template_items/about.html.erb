<div class="ui vertical stripe segment">
  <div class="ui text container">
    <h3 class="ui header" id="about_title"><%= item_with_link "about_title" %></h3>
    <p><%= item_with_link "about_text" %></p>
  </div>
</div>

<script>
  $(document).ready(function() {
    setTimeout(scroll_to_form, 500);
  });

  function scroll_to_form() {
    var session_form = $("#about_title");

    $('html, body').animate({
      scrollTop: ($(session_form).offset().top - 55)
    }, 500);
  }
</script>
