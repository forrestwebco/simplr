<div class="ui vertical stripe segment">
  <div class="ui text container" id="lessons_schedule_img">
    <%= item_img_with_link "lessons_schedule" %>

    <p><%= render "app/body", item: item_with_link("lessons_schedule_txt", :without_link, :dont_show_tmp) %> <%= item_edit_link :lessons_schedule_txt %></p>
  </div>
</div>

<script>
  $(document).ready(function() {
    setTimeout(scroll_to_form, 500);
  });

  function scroll_to_form() {
    var session_form = $("#lessons_schedule_img");

    $('html, body').animate({
      scrollTop: ($(session_form).offset().top - 55)
    }, 500);
  }
</script>
