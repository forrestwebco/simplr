<% if current_user %>
  <%= form_for(@event, html: { class: "ui form", id: :new_event_form }) do |f| %>
    <h4 class="ui dividing header">Schedule an Event</h4>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title, placeholder: "Title" %>
    </div>

    <div class="field">
      <label>Description</label>
      <%= f.text_area :body, placeholder: "Description" %>
    </div>

    <div class="field">
      <label>Attach an image</label>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.datetime_picker :start_date, class: :datepicker, id: "flatpickr-input" %>
    </div>

    <button class="ui button" type="submit">Save</button>
  <% end %>

  <script>
    $(document).ready(function() {
      //$("#flatpickr-input").flatpickr();
      //$("#datepicker").datepicker();
      //flatpickr('#flatpickr-input');
      // initializes datepicker
      //$('.datepicker').pickadate();
      // focuses to form by scrolling
      setTimeout(scroll_to_form, 500);
    });
    function scroll_to_form() {
      var edit_form = $("#new_event_form");
      $('html, body').animate({
        scrollTop: ($(edit_form).offset().top - 55)
      }, 500);
    }
  </script>
<% end %>
